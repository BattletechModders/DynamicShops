{
	"Name": "DynamicShops",
	"Author": "Denadan",
	"Website": "https://github.com/Denadan/DynamicShops",

	"Enabled": enabled,
	"DependsOn": ["CustomShops"],
	"DLL": "DynamicShops.dll",
	"DLLEntryPoint": "DynamicShops.Control.Init",
	"CustomResourceTypes": ["DShopDef", "DFactionShopDef", "DBMShopDef"],
	
	"Settings" : {
		"LogLevel": "Debug",

		"ReplaceSystemShop" : true;
		"ReplaceFactionShop" : true;
		"ReplaceBlackMarket" : true;
		
		"FactionShopOnEveryPlanet" : true,
		
		"BlackMarketSystemTag" : "planet_other_blackmarket",

		"SystemShops" : {
			"Untagged" : [	
				"ItemCollection_TestMech"
			]
		}
	},	
		
	"Manifest": [ 
		{
			"Type": "ItemCollectionDef",
			"Path": "data" 			
		}
	]
}